<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
        version="4.0">

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>org.example.security.servlets.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/barlus</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>goodbye</servlet-name>
        <servlet-class>org.example.security.servlets.GoodbyeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>goodbye</servlet-name>
        <url-pattern>/hajox</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>authenticationFilter</filter-name>
        <filter-class>org.example.security.filters.AuthenticationFilter</filter-class>
    </filter>

    <filter>
        <filter-name>authorizationFilter</filter-name>
        <filter-class>org.example.security.filters.AuthorizationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>authenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>authorizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

</web-app>
